{
  "name": "directus-extension-installer",
  "version": "1.2.0",
  "description": "A commandline tool to help easily install directus extensions to a desired path from git.",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --reporter=default --reporters=jest-junit",
    "build": "tsc",
    "build:prod": "npm run build && npm run package",
    "package": "pkg .",
    "dev": "NODE_ENV=development ts-node src/index.ts test/ -y test.yaml"
  },
  "bin": "dist/index.js",
  "pkg": {
    "targets": [
      "node18-alpine-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "compiled"
  },
  "keywords": [
    "directus",
    "directus-extension",
    "git",
    "installer"
  ],
  "author": "Jonas KÃ¶nig <jonas.koenig@mindbox.de>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/semver": "^7.5.0",
    "@types/yargs": "^17.0.24",
    "jest": "^29.6.1",
    "jest-junit": "^16.0.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@mbx/fancy-console": "^1.0.0",
    "axios": "0.30.0",
    "semver": "^7.5.3",
    "yaml": "^2.3.1",
    "yargs": "^17.7.2"
  }
}
